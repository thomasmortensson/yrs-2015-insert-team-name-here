{
  "manifest_version": 2,

  "name": "Spoiler alert",
  "description": "Spoiler Alert is a useful extension which deletes all the spoilers from your favourite programmes on all social media.",   

  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background":
  {
    "scripts": ["jquery-2.1.4.min.js", "Replacement.js"],
    "persistant": false
  },
  "content_scripts": 
  [
    {
      "matches": ["*://*/*"],
      "js": [ "jquery-2.1.4.min.js", "Replacement.js"],
      "run_at": "document_end"
      
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
